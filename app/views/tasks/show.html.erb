<h1>Task</h1>
<h2><%= @task.title %></h2>
<p><%= @task.details %></p>

<p><%= link_to 'update', edit_task_path(@task), class: "btn btn-light" %></p>
<p><%= link_to "Delete", task_path(@task),
      method: :delete,
      data: { confirm: "Are you sure?" },
      class: "btn btn-danger" %></p>

<p><%= link_to 'list', tasks_path, class: "btn btn-primary" %></p>

